<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <ThingDef ParentName="BuildingBase">
        <defName>ShipSalvageBayAdvanced</defName>
        <label>advanced salvage bay</label>
        <designatorDropdown>Ship_SalvageBays</designatorDropdown>
        <drawerType>MapMeshAndRealTime</drawerType>
        <graphicData>
            <texPath>Things/Building/Ship/SalvageBay</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(5,5.6)</drawSize>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <researchPrerequisites>
            <li>ShipSalvageBay</li>
        </researchPrerequisites>
        <altitudeLayer>DoorMoveable</altitudeLayer>
        <passability>Standable</passability>
