<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <ThingDef ParentName="BuildingBase">
        <defName>ShipSalvageBayAdvanced</defName>
        <label>advanced salvage bay</label>
        <designatorDropdown>Ship_SalvageBays</designatorDropdown>
        <drawerType>MapMeshAndRealTime</drawerType>
        <graphicData>
            <texPath>Things/Building/Ship/SalvageBay</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(5,5.6)</drawSize>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <researchPrerequisites>
            <li>ShipSalvageBay</li>
        </researchPrerequisites>
        <altitudeLayer>DoorMoveable</altitudeLayer>
        <passability>Standable</passability>
        <fillPercent>0.1</fillPercent>
        <statBases>
            <WorkToBuild>5000</WorkToBuild>
            <MaxHitPoints>500</MaxHitPoints>
            <Flammability>0</Flammability>
        </statBases>
        <description>Unlike the normal salvage bay, this version directly converts ship wreckage into resources</description>
        <size>(5,5)</size>
        <designationCategory>Ship</designationCategory>
        <rotatable>false</rotatable>
        <building>
            <isEdifice>false</isEdifice>
        </building>
        <costList>
            <Steel>250</Steel>
            <Plasteel>50</Plasteel>
            <ComponentSpacer>6</ComponentSpacer>
        </costList>
        <comps>
            <li Class="SaveOurShip2.CompProps_ShipCachePart"/>
            <li Class="SaveOurShip2.CompProps_ShipBay">
                <compClass>SaveOurShipPatch.CompShipBaySalvageAdvanced</compClass>
                <weight>5000</weight>
                <borderSize>1</borderSize>
                <graphicPath>Things/Building/Ship/Salvage_Bay_Roof</graphicPath>
            </li>
            <li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>0</basePowerConsumption>
				<transmitsPower>false</transmitsPower>
			</li>
        </comps>
        <placeWorkers>
            <li>SaveOurShip2.PlaceWorker_ShipBay</li>
            <li>SaveOurShip2.PlaceWorker_OnShipHull</li>
        </placeWorkers>
        <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
        <staticSunShadowHeight>1.0</staticSunShadowHeight>
    </ThingDef>

    <ThingDef ParentName="BuildingBase">
		<defName>ShipSalvageBayNanoAdvanced</defName>
		<label>advanced glittertech salvage bay</label>
		<designatorDropdown>Ship_SalvageBays</designatorDropdown>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<texPath>Things/Building/Ship/SalvageBayNano</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(5,5.6)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<researchPrerequisites>
			<li>ShipSalvageBayGlitter</li>
		</researchPrerequisites>
		<altitudeLayer>DoorMoveable</altitudeLayer>
		<passability>Standable</passability>
		<fillPercent>0.1</fillPercent>
		<statBases>
			<WorkToBuild>5000</WorkToBuild>
			<MaxHitPoints>500</MaxHitPoints>
			<Flammability>0</Flammability>
		</statBases>
		<description>Unlike the advanced salvage bay, this version can also recycle small loose objects from around enemy wrecks.</description>
		<size>(5,5)</size>
		<designationCategory>Ship</designationCategory>
		<rotatable>false</rotatable>
		<building>
			<isEdifice>false</isEdifice>
		</building>
		<costList>
			<Steel>250</Steel>
			<Plasteel>100</Plasteel>
			<ComponentSpacer>12</ComponentSpacer>
			<SoSEntanglementManifold>1</SoSEntanglementManifold>
		</costList>
		<resourcesFractionWhenDeconstructed>1</resourcesFractionWhenDeconstructed>
		<comps>
			<li Class="SaveOurShip2.CompProps_ShipCachePart"/>
			<li Class="SaveOurShip2.CompProps_ShipBay">
				<compClass>SaveOurShipPatch.CompShipBaySalvageAdvanced</compClass>
				<beam>true</beam>
				<weight>10000</weight>
				<borderSize>1</borderSize>
                <graphicPath>Things/Building/Ship/Salvage_Bay_Roof</graphicPath>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>2000</basePowerConsumption>
			</li>
		</comps>
		<placeWorkers>
			<li>SaveOurShip2.PlaceWorker_OnShipHull</li>
			<li>SaveOurShip2.PlaceWorker_ShipBay</li>
		</placeWorkers>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<staticSunShadowHeight>1.0</staticSunShadowHeight>
	</ThingDef>
</Defs>