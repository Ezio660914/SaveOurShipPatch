        <rotatable>false</rotatable>
        <building>
            <isEdifice>false</isEdifice>
        </building>
        <costList>
            <Steel>250</Steel>
            <Plasteel>50</Plasteel>
            <ComponentSpacer>6</ComponentSpacer>
        </costList>
        <comps>
            <li Class="SaveOurShip2.CompProps_ShipCachePart"/>
            <li Class="SaveOurShip2.CompProps_ShipBay">
                <compClass>SaveOurShipPatch.CompShipBaySalvageAdvanced</compClass>
                <weight>5000</weight>
                <borderSize>1</borderSize>
                <graphicPath>Things/Building/Ship/Salvage_Bay_Roof</graphicPath>
            </li>
        </comps>
        <placeWorkers>
            <li>SaveOurShip2.PlaceWorker_ShipBay</li>
            <li>SaveOurShip2.PlaceWorker_OnShipHull</li>
        </placeWorkers>
        <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
        <staticSunShadowHeight>1.0</staticSunShadowHeight>
    </ThingDef>
